<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/update_user_info"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="确定"
        android:textColor="@color/auqamarin"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/pim_user_address"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="默认地址："
        app:layout_constraintBottom_toTopOf="@id/update_user_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_user_address" />

    <EditText
        android:id="@+id/edit_user_address"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@id/update_user_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pim_user_address"/>

    <TextView
        android:id="@+id/pim_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="电话号码："
        app:layout_constraintBottom_toTopOf="@id/pim_user_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_user_phone" />

    <EditText
        android:id="@+id/edit_user_phone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@id/pim_user_address"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pim_user_phone"/>

    <TextView
        android:id="@+id/pim_user_description"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="用户签名："
        app:layout_constraintBottom_toTopOf="@id/pim_user_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_user_name" />

    <EditText
        android:id="@+id/edit_user_description"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@id/pim_user_phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pim_user_description"/>

    <TextView
        android:id="@+id/pim_user_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="用户昵称："
        app:layout_constraintBottom_toTopOf="@id/pim_user_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_user_name" />

    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@id/pim_user_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pim_user_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
