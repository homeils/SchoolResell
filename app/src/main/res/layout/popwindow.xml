<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/pop_ok_order"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="确认收货"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@id/pop_view1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/pop_view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/whiteSmoke"
        app:layout_constraintBottom_toTopOf="@id/pop_channel_order"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/pop_channel_order"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="取消订单"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@id/pop_view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/pop_completed"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="订单已完成"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/pop_view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/pop_view2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@color/whiteSmoke"
        app:layout_constraintBottom_toTopOf="@id/pop_channel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/pop_channel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/sandyBrown"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
