<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/shop_banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shop_advertisement_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shop_advertisement_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台上新 限时钜惠"
                android:textColor="@color/darkGreen"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="@id/shop_advertisement_container"
                app:layout_constraintTop_toTopOf="@id/shop_advertisement_container" />

            <TextView
                android:id="@+id/shop_advertisement_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海量好货"
                android:textColor="@color/darkGreen"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="@id/shop_advertisement_container"
                app:layout_constraintTop_toTopOf="@id/shop_advertisement_container" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/advertisement_img"
                app:layout_constraintDimensionRatio="3:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shop_advertisement_title1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
