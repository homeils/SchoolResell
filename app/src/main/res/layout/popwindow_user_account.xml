<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/update_user_account"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="确定"
        android:textColor="@color/auqamarin"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/pim_user_account"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="更换账号："
        android:gravity="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@id/update_user_account"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edit_user_account"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/update_user_account"
        app:layout_constraintLeft_toRightOf="@id/pim_user_account"/>

</androidx.constraintlayout.widget.ConstraintLayout>
