<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PutActivity">

    <LinearLayout
        android:id="@+id/put_header"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/sandyBrown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Orientation" />

    <TextView
        android:id="@+id/put_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="我在卖的"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/put_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/put_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="搜索"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/put_title"
        app:layout_constraintRight_toLeftOf="@id/put_cancel" />

    <TextView
        android:id="@+id/put_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="一键取消"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/put_title"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/put_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/put_header" />

</androidx.constraintlayout.widget.ConstraintLayout>
