<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/auqamarin</item>
        <!--&lt;!&ndash;标题栏颜色&ndash;&gt;-->
        <!--<item name="colorPrimary">@color/mysteriousBlue</item>-->
        <!--控件被选中颜色-->
        <item name="colorAccent">@color/gray</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/whiteSmoke</item>
        <!--字体颜色-->
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <!-- 自定义启动图片主题 -->
    <style name="AppTheme.NoActionBarWithBackground">
        <item name="windowActionBar">false</item>//取消Actionbar
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>//设置全屏
        <item name="android:windowBackground">@mipmap/application_background</item>//设置背景
    </style>


</resources>
